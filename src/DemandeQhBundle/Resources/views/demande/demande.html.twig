                            <input type="text" id="otherValue" name="other">
                        </div>

                    </td>
                </tr>
            </table>
            <script>

                var otherCheckbox = document.querySelector('input[value="other"]');
                var otherText = document.querySelector('input[id="otherValue"]');
                var msg = document.querySelector('.form--message');
                var montant =document.querySelector('#montant');
                montant.onchange = function() {
                    if(montant.value>=10000000){
                        $('#or').removeAttr('style')
                        $('#or1').removeAttr('style')
                        $('#or').attr('style','display:bloc')
                        $('#or1').attr('style','display:bloc')
                    }else{
                        $('#or').removeAttr('style')
                        $('#or1').removeAttr('style')
                        $('#or').attr('style','display:none')
                        $('#or1').attr('style','display:none')
                    };
                };
                msg.style.visibility = 'hidden';
                otherCheckbox.onchange = function() {
                    if(otherCheckbox.checked) {
                        otherText.style.visibility = 'visible';
                        otherText.value = '';
                    } else {
                        otherText.style.visibility = 'hidden';
                    }
                };
                $("#btn-2-next").click(function () {
                    var montant=$("#montant").val()
                    alert(montant)
                })

            </script>
