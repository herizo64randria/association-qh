{% extends '@Front/base_front.html.twig' %}
{% block sous_menu_titre %}VERSEMENT{% endblock %}
{% block body_container %}

    <div class="col">
        <div class="card">
            <div class="card-header bg-primary text-white"><i class="fa fa-envelope"></i> {{ 'acceuil.soustitre'|trans }}

            </div>
            <div class="card-body">
                <form>
                    <a href="{{ path('versement_ajouter') }}">Ajouter versement</a>
                    <div class="form-group">
                        <label for="name">{{ 'versement.date'|trans }}</label>
                        <input name="date_versement" type="text" class="form-control" id="date_versement"   required>
                    </div>
                    <div class="form-group">
                        <label for="email">{{ 'versement.numero'|trans }}</label>
                        <input name="numero_compte" type="text" class="form-control" id="numero_compte"   required>

                    </div>
                    <div class="form-group">
                        <label for="message">{{ 'versement.montant'|trans }}</label>
                        <input name="montant" type="text" class="form-control" id="montant"   required>
                    </div>
                    <div class="mx-auto">
                        <button type="submit" class="btn btn-primary text-right">{{ 'versement.valider'|trans }}</button></div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-4">
        <div class="card bg-light mb-3">
            <div class="card-header bg-success text-white text-uppercase"><i class="fa fa-home"></i> Address</div>
            <div class="card-body">
                <p>3 rue des Champs Elys√©es</p>
                <p>75008 PARIS</p>
                <p>France</p>
                <p>Email : email@example.com</p>
                <p>Tel. +33 12 56 11 51 84</p>

            </div>

        </div>
    </div>

{% endblock %}