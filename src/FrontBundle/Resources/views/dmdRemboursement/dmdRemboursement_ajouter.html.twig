                    <div class="form-group">
                        <label for="dateDemande" class=" control-label">{{ 'dmdRemboursement_ajouter.date'|trans }}</label>
                        <div class="input-group date form_date" data-date="" data-link-field="dateDemande" data-link-format="yyyy-mm-dd">
                            <input required class="form-control"  type="text" value="" readonly name="date_demande">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                            <span class="input-group-addon input-group-text"><i class="fa fa-calendar"></i></span>
                        </div>

                        <input type="hidden" id="dateDemande" value="" />
                    </div>
                    <div class="form-group">
                        <label for="message">{{ 'dmdRemboursement_ajouter.montant'|trans }}</label>
                        <input name="montant" type="text" class="form-control" id="montant"   required autocomplete="off">
                    </div>
                    <div class="form-group">
                        <label for="email">{{ 'dmdRemboursement_ajouter.cheque'|trans }}</label>

                        <select id="cheque" name="cheque" class="form-control" required>
                            <option value="1" selected>{{ 'dmdRemboursement_ajouter.barrée'|trans }}</option>
                            <option value="0">{{ 'dmdRemboursement_ajouter.nonbarrée'|trans }}</option>
                        </select>

                    </div>
                    <div class="mx-auto">
                        <button type="submit" class="btn btn-primary text-right">{{ 'dmdRemboursement_ajouter.valider'|trans }}</button></div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-4" style="font-family: 'Courier New'">
        <div class="card bg-light mb-3">
            <div class="card-header bg-success text-white text-uppercase"><i class="fa fa-home"></i> {{ 'dmdRemboursement_ajouter.adresse'|trans }}</div>
            <div class="card-body">
                <p>{{ personne.adresse }}</p>
                <p>{{ personne.numeroSabil ~'-'~ personne.ville }}</p>
                <p>Madagascar</p>
                <p>Email : {{ personne.userCompte.email }}</p>
                <p>Tel 1 : {{ personne.num1 }}</p>
                <p>Tel 2 : {{ personne.num2 }}</p>


            </div>

        </div>
    </div>
    <script src="{{ asset('DatePicker1/js/bootstrap-datetimepicker.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('DatePicker1/js/locales/bootstrap-datetimepicker.fr.js') }}" charset="UTF-8"></script>
    <script>
        $('.form_date').datetimepicker({
            format: 'dd/mm/yyyy',
            language:  'fr',
            weekStart: 1,
            todayBtn:  1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 2,
            minView: 2,
            forceParse: 0
        });
    </script>
{% endblock %}