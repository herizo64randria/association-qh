{% extends '@Front/base_front.html.twig' %}
{% block sous_menu_titre %} {{ 'dmdRemboursement_ajouter.titre'|trans }}{% endblock %}
{% block body_container %}
    <style>
        .card{ box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        }
        .card:hover{ box-shadow: 0 4px 8px 0 rgba(0,0,0,0.8);
        }
    </style>
    <div class="col" style="font-family: 'Courier New'">
        <div class="card">
            <div class="card-header bg-primary text-white"><i class="fa fa-list"></i> {{ 'dmdRemboursement_ajouter.soustitre'|trans }}
            </div>
            <div class="card-body">
                <form action="#" method="post" autocomplete="off">
                    <div class="form-group">
                        <label for="name">{{ 'dmdRemboursement_ajouter.numero'|trans }}</label>
                        <input name="numero_demande" type="text" value="{{ num }}" class="form-control" id="numero_demande"  readonly  required autocomplete="off">
                    </div>
                   {# <div class="form-group">
                        <div class="form-group">
                            <label for="message">{{ 'dmdRemboursement_ajouter.date'|trans }}</label>
                            <div class="input-group date" id="date_demande" data-target-input="nearest">
                                <input type="text" id="date_demande" name="date_demande"  class="form-control datetimepicker-input" data-target="#date_demande"/>
                                <div class="input-group-append" data-target="#date_demande" data-toggle="datetimepicker">
