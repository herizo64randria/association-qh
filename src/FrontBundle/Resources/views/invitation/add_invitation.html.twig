                //Affiche les résultats dans la console
                console.log(chaine);
                console.log(tb);
                $("#res").html("");
                $.ajax({
                    url : '{{ path('addajax_invite') }}',
                    type: 'post',
                    data : chaine
                }).done(function(response){

                    $("#res").html(response);
                });
            });
        });

        function test_its() {
            var str = document.getElementById("its").value;
            var patt1 = /^[1-9]/g;
            var res = str.match(patt1);
            var taille = str.length;
            if(res && taille==8){
                $('#err_num_its').text('');
                return true;
            }
            else
            {
                $('#err_num_its').text('Entrer un nombre de 8 chiffres et qui ne commence pas par zéro');
                return false;
            }
        }
    </script>

{% endblock %}