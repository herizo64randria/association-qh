                </div>
                </div>

                    
                </div>

            </div>

        </div>

    </div>

    {#MODALE suivi#}
    <form  id="myform" action="" method="post" enctype="multipart/form-data">
        <div id="type" class="modal fade " tabindex="-1" role="dialog"  >
            <div class="modal-dialog" style="width: 500px;" >
                <div class="modal-content">

                    <div class="modal-body">

                            <div class="form-group">
                                <label >Nom </label>
                                <b class="text-danger" id="err_num_its"></b>
                                <input id="nom"  name="nom"  type="text" class="form-control" id="nom"   required autocomplete="off">

                            </div>
                        <div class="form-group">
                            <label >DÃ©tail </label><br>

                            <textarea name="detail" id="detail" cols="44" rows="10"></textarea>
                        </div>
                        <div class="form-group">
                            <label >Logo  </label>

                            <input id="logo"  name="logo"  type="file" class="form-control" id="logo"   required autocomplete="off">

                        </div>

                        <div class="form-group">
                                <button type="submit"  class="btn btn-lg btn-success">valider</button>
                        </div>
                    </div></div></div></div>

    </form>
    <script>


        function modale(param ) {
            if(param=='caisse'){
                $("#myform").attr('action','{{ path('addCaisse') }}')
            }
            if(param=='banque'){
                $("#myform").attr('action','{{ path('addBanque') }}')
            }
            $('#type').modal({show:true});

        }
    </script>
{% endblock %}
