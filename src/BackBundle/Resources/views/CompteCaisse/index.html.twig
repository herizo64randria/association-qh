                    <div class="card">

                        <div class="card-header">
                           <h2 class="text-info">Banque(s)</h2>
                        </div>

                        <div class="card-body">
                    <br>
                            {#{% for caisse in caisses  %}
                                <a class="item" href="{{ path('detailCaisse',{'id':caisse.id}) }}">
